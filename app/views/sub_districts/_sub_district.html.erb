<div id="<%= dom_id sub_district %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sub_district.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sub district", sub_district, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this sub district', edit_sub_district_path(sub_district), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
